<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:visibility="visible"
        android:background="#0929DA">
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:defaultNavHost="false"
            app:navGraph="@navigation/nav_graph" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="424dp"
            android:layout_height="730dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp" android:layout_marginEnd="1dp" android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp" android:id="@+id/helloLayout"
            android:animateLayoutChanges="true">
        <Button
                android:text="@string/button"
                android:layout_width="230dp"
                android:layout_height="wrap_content" android:id="@+id/buttonId"/>
        <TextView
                android:text="Hello World!"
                android:layout_width="229dp"
                android:layout_height="wrap_content" android:id="@+id/messageText"/>
        <Button
                android:text="@string/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonRed"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/presence_video_busy"
                android:id="@+id/imageRed" android:visibility="invisible" tools:visibility="invisible"
                android:contentDescription="@string/red_image"/>
        <Button
                android:text="@string/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonGreen"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/presence_video_online"
                android:id="@+id/imageGreen" android:visibility="invisible" tools:visibility="invisible"
                android:contentDescription="@string/green_image" tools:ignore="ContentDescription"/>
        <Button
                android:text="@string/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonYellow"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/presence_video_away"
                android:id="@+id/imageYellow" tools:visibility="invisible" android:visibility="invisible"
                android:contentDescription="@string/yellow_image" tools:ignore="ContentDescription"/>
        <Button
                android:text="Navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/navbutton"/>
    </LinearLayout>
</LinearLayout>